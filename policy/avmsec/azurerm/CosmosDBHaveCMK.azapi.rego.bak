
package avmsec

import rego.v1

valid_azurerm_cosmosdb_account_have_cmk(resource) if {
    resource.values.key_vault_key_id != null
}

valid_azapi_cosmosdb_account_have_cmk(resource) if {
    resource.body.properties.keyVaultKeyUri != null
}

deny_AVM_SEC_100 contains reason if {
    resource := data.utils.resource(input, "azurerm_cosmosdb_account")[_]
    not valid_azurerm_cosmosdb_account_have_cmk(resource)

    reason := sprintf("avmsec/AVM_SEC_100: Ensure that Cosmos DB accounts have customer-managed keys to encrypt data at rest. https://github.com/bridgecrewio/checkov/blob/main/checkov/terraform/checks/resource/azure/CosmosDBHaveCMK.py", [])
}

deny_AVM_SEC_100 contains reason if {
    resource := data.utils.resource(input, "azapi_resource")[_]
    not valid_azapi_cosmosdb_account_have_cmk(resource)

    reason := sprintf("avmsec/AVM_SEC_100: Ensure that Cosmos DB accounts have customer-managed keys to encrypt data at rest. https://github.com/bridgecrewio/checkov/blob/main/checkov/terraform/checks/resource/azure/CosmosDBHaveCMK.py", [])
}
